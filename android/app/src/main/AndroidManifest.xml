<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.pegasustrasher.app">
    
    <!-- Permissions yang relevan untuk lock screen -->
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD"/>
    
    <!-- HAPUS permission berikut karena tidak perlu untuk lock screen sederhana: -->
    <!-- 
    <uses-permission android:name="android.permission.INTERNET"/>  ❌ Tidak ada fungsi online
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>  ❌ Tidak ada service foreground
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>  ❌ Cukup pakai AudioSession
    <uses-permission android:name="android.permission.REORDER_TASKS"/>  ❌ Tidak perlu mengatur task
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>  ❌ Tidak perlu auto-start
    -->
    
    <application
        android:label="Pegasus Trasher"
        android:name="${applicationName}"
        android:icon="@android:drawable/sym_def_app_icon"
        android:allowBackup="false"
        android:usesCleartextTraffic="false" <!-- Ubah ke false -->
        android:requestLegacyExternalStorage="true"
        android:theme="@style/LaunchTheme"
        android:supportsRtl="true">
        
        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop" <!-- Ubah dari singleInstance -->
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize"
            android:showWhenLocked="true"
            android:turnScreenOn="true"
            android:excludeFromRecents="true"> <!-- Ubah ke true agar tidak muncul di recent apps -->
            
            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme"/>
                
            <meta-data
                android:name="io.flutter.embedding.android.SplashScreenDrawable"
                android:resource="@drawable/launch_background"/>
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
                <!-- HAPUS jika tidak ingin jadi launcher default -->
                <!-- <category android:name="android.intent.category.HOME"/> -->
                <!-- <category android:name="android.intent.category.DEFAULT"/> -->
            </intent-filter>
        </activity>
        
